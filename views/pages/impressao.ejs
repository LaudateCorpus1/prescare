<div class="cabecalho-impressao bold">
    <h1>Casa do Menino Jesus de Praga </h1>
    <h2>Nelson Zang, 420 - Porto Alegre/RS - Fone:(51) 3315.0011 </h2>
    <h2> www.casadomenino.org.br</h2>
</div>
<table class="tabela-infos">
    <thead>
        <tr>
            <th>
                <h3 class="nome-impressao">
                    <%= prescricao.acolhido.nome %>
                </h3>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr class="row espaco-linhas">
            <td class="col-md-3">
                <span> Data de Nascimento: </span>
                <span id="data"> <%= prescricao.acolhido.nascimento %> </span>
            </td>
            <td class= "col-md-2">
                <span> Idade: </span>
                <span id="idade"></span>
                <script>calcularIdade('<%= prescricao.acolhido.nascimento %>')</script>
            </td>
            <td class= "col-md-2">
                <span> Peso: </span>
                <span> <%= prescricao.acolhido.peso %> kg </span>
            </td>
            <td class= "col-md-2">
                <span> Alergias:</span>
                <span> <%= prescricao.acolhido.alergias %> </span>
            </td>
            <td class= "col-md-3">
                <span> Via de alimentação: </span>
                <span> <%= prescricao.acolhido.via_alimentacao %> </span>
            </td>
        </tr>

        <tr class = "row">
            <td class= "col-md-5">
                <span>
                    Atualizado em:
                    <%= formatarData({ data: prescricao.updated_at, formato: 'DD/MM/YYYY - HH:mm:ss', fallback: '---'}) %>
                </span>
            </td>
            <td class= "col-md-4">
                <span>
                    Data de impressão:
                    <%= formatarData({ data: new Date(), formato: 'DD/MM/YYYY', fallback: '---'})%>
                </span>
            </td>
            <td class= "col-md-3">
                <span>
                    Validade da prescrição:
                    <%= formatarData({ data: prescricao.validade, fallback: '---'}) %>
                </span>
            </td>
        </tr>
    </tbody>  
</table>

<label for="dieta">Dieta</label>
<table class="tabela-prescricao tabela-campos">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Intervalo</th>
            <th>Observações</th>
        </tr>
    </thead>
    <tbody>
        <%for (dieta of prescricao.dieta){%>
            <tr>
                <td class="td-observacao">
                    <%= dieta.tipo %>
                </td>

                <td class="td-observacao">
                    <%= dieta.intervalo %>
                </td>

                <td class="td-observacao">
                    <%= dieta.observacoes %>
                </td>
            </tr>
        <%}%>
    </tbody>
</table>

<label for="cuidado">Cuidados</label>
<table class="tabela-prescricao tabela-campos">
    <thead>
        <tr>
            <th>Descrição</th>
            <th>Intervalo</th>
            <th>Observações</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <% for (cuidado of prescricao.cuidados){ %>
                <td class="td-observacao">
                    <%= cuidado.descricao %>
                </td>

                <td class="td-observacao">
                    <%= cuidado.intervalo %>
                </td>

                <td class="td-observacao">
                    <%= cuidado.observacoes %>
                </td>
            <% } %>
        </tr>
    </tbody>
</table>

<label for="medicamento">Medicamentos</label>
<table class="tabela-prescricao tabela-campos">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Dosagem</th>
            <th class="fm-impressao">Forma Farmacêutica</th>
            <th>Via</th>
            <th>Posologia</th>
            <th>Observações</th>
            <th>Validade</th>
            <th>Técnico</th>
        </tr>
    </thead>

    <tbody>
        <% for (medicamento of prescricao.medicamentos){ %>
            <tr>
                <td>
                    <%= medicamento.nome %>
                </td>

                <td>
                    <%= medicamento.dosagem %>
                </td>

                <td>
                    <%= medicamento.formaFarmaceutica %>
                </td>

                <td>
                    <%= medicamento.via %>
                </td>

                <td class="td-posologia">
                    <%= medicamento.posologia %>
                </td>

                <td class="td-observacao">
                    <%= medicamento.observacoes %>
                </td>

                <td>
                    <%= medicamento.validadeMed %>
                </td>

                <td class="nome-tecnico">
                </td>
            </tr>
        <% } %>
    </tbody>
</table>

