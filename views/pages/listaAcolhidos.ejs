<%- contentFor('body') %>
<section class="section">
    <main class="main">
        <h1 class="titulo-lista-acolhidos">Lista de Acolhidos</h1>
        <ul class="lista-acolhidos">
            <%for (acolhidos of acolhidos){%>
                <li>
                    <a href="/acolhido/<%= acolhidos.id %>">
                        <%= acolhidos.nome %>
                        <div>
                            <span>
                                <%if (user.tipo === "clinica" || user.tipo === "neurologista") { %>
                                    Validade da prescrição:
                                    <%= acolhidos.prescricaos[0] ? acolhidos.prescricaos[0].validade.split("-").reverse().join("/") : '' %> |
                                <% } %>
                                Atualizado em:
                                <%= acolhidos.prescricaos[0] ? moment(acolhidos.prescricaos[0].updated_at).format('DD/MM/YYYY HH:mm:ss') : '---' %>
                            </span>
                        </div>
                    </a>
                </li>
            <% } %>
        </ul>
    </main>
</section>

<div class="botoes botao-usuario ">
    <%if (user.tipo === "administrador") { %>
        <a href="/usuario/novo"> Inserir Novo Usuário</a>
        <a href="listaUsuarios"> Lista de Usuários</a>
        <a href="/acolhido/novo"> Inserir Novo Acolhido</a>
    <% } else { %>
        <a href="/usuario/<%= user.id %>/edit">
            alterar senha
        </a>
    <% } %> 
</div>
